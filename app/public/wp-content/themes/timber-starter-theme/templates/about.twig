{% extends "base.twig" %}

{% block content %}
  <article class="about-page">
    <header class="about-header">
      <h1 class="about-title">{{ post.title }}</h1>
    </header>

    <section class="about-content">
      {{ post.content }}
    </section>

    {% if post.get_field('team_members') %}
      <section class="team-members">
        <h2>Nuestro Equipo</h2>
        <div class="team-grid">
          {% for member in post.get_field('team_members') %}
            <div class="team-member">
              {% if member.photo %}
                <img src="{{ member.photo.url }}" alt="{{ member.name }}" class="member-photo">
              {% endif %}
              <h3 class="member-name">{{ member.name }}</h3>
              <p class="member-position">{{ member.position }}</p>
              <p class="member-bio">{{ member.bio }}</p>
            </div>
          {% endfor %}
        </div>
      </section>
    {% endif %}

    {% if post.get_field('mission_statement') %}
      <section class="mission-statement">
        <h2>Nuestra Misión</h2>
        <blockquote>{{ post.get_field('mission_statement') }}</blockquote>
      </section>
    {% endif %}

    {% if post.get_field('contact_info') %}
      <section class="contact-info">
        <h2>Contáctanos</h2>
        {{ post.get_field('contact_info') }}
      </section>
    {% endif %}
  </article>
{% endblock %}