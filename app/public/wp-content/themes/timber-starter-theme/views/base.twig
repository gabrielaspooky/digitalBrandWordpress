{% block html_head_container %}
    {% include 'html-header.twig' %}
    {% block head %}
        <!-- Aquí puedes añadir elementos personalizados al <head>, como metas, estilos adicionales, etc. -->
    {% endblock %}
{% endblock %}

<body class="{{ body_class }} flex flex-col min-h-screen" data-template="base.twig">
    {{ function('wp_body_open') }}
    <a class="skip-link screen-reader-text" href="#content">{{ _e('Skip to content') }}</a>

    <!-- Encabezado -->
    <header class="header bg-[#7E2277] text-white py-4">
        {% block header %}
            <div class="wrapper max-w-6xl mx-auto flex justify-between items-center">
                <!-- Logo del sitio -->
                <h1 class="hdr-logo text-3xl font-bold" role="banner">
                    <a class="hdr-logo-link hover:text-[#9DC62D]" href="{{ site.url }}" rel="home">{{ site.name }}</a>
                </h1>
                <!-- Menú de navegación -->
                <nav id="nav-main" class="nav-main flex space-x-6" role="navigation">
                    <a href="{{ site.url }}/services">Servicios</a>
                    <a href="{{ site.url }}/about">Acerca de</a>
                    <a href="{{ site.url }}/contact">Contacto</a>
                </nav><!-- #nav -->
            </div>
        {% endblock %}
    </header>

    <!-- Contenido Principal -->
    <main id="content" role="main" class="content-wrapper bg-[#26243E] py-8 flex-grow">
        {% block content %}
         <div class="container mx-auto px-4 py-8 bg-[#26243E]">
    <h1 class="text-4xl font-bold text-center mb-8">BlendCraft Studios</h1>
    <p class="text-lg text-gray-700 text-center mb-8">
        Explora nuestros servicios y descubre cómo podemos ayudarte a alcanzar tus objetivos.
    </p>
    <img src="{{ theme.link }}/assets/images/animation.gif" alt="BlendCraft Studios Animation">

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {% for post in posts %}
            <article class="bg-[#26243E] text-white shadow-lg rounded-lg overflow-hidden transform transition duration-500 hover:scale-105">
                <img src="{{ post.thumbnail }}" alt="{{ post.title }}" class="w-full h-48 object-cover">
                <div class="p-6">
                    <h2 class="text-2xl font-bold text-blue-800 mb-4">{{ post.title }}</h2>
                    <p class="text-gray-600 mb-4">{{ post.excerpt }}</p>
                    <a href="{{ post.link }}" class="text-blue-600 hover:text-blue-800 font-semibold">Leer más</a>
                </div>
            </article>
        {% else %}
            <p class="text-center text-gray-500">No hay publicaciones disponibles en este momento.</p>
        {% endfor %}
    </div>
        {% endblock %}
    </main>

    <!-- Footer -->
    {% block footer %}
        <footer id="footer" class="bg-[#9DC62D] text-white py-4 mt-auto">
            <div class="wrapper max-w-6xl mx-auto">
                {% include 'footer.twig' %}
            </div>
            {{ function('wp_footer') }}
        </footer>
    {% endblock %}
</body>
</html>
